<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListView2Activity">

    <TextView
        android:id="@+id/listView2Tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ArrayAdapter Sample"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ArrayAdapter Sample" />

    <ListView
        android:id="@+id/listView21"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView2Tv1"
        tools:listitem="@layout/listview21_list">

    </ListView>

    <TextView
        android:id="@+id/listView2Tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BaseAdapter Sample"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView21"
        tools:text="BaseAdapter Sample" />

    <ListView
        android:id="@+id/listView22"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView2Tv2"
        tools:listitem="@layout/listview22_list" />
</androidx.constraintlayout.widget.ConstraintLayout>